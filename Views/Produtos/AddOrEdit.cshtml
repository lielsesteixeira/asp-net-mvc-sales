@model csharp.Models.Produto

@{
    ViewData["Title"] = "Cadastro";
}

<div class=" bg-black text-white">
<h4>Produto</h4>

<hr />
<div class="row  bg-black text-white">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduto" />
            <div class="form-group mt-5 mb-2">
                <label asp-for="DscProduto" class="control-label">Produto</label>
            <input asp-for="DscProduto" class="form-control" placeholder="Descrição do produto"/>
                <span asp-validation-for="DscProduto" class="text-danger"> Campo obrigatório</span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="VlrUnitario" class="control-label">Valor unitário</label>
                <input asp-for="VlrUnitario" class="form-control" placeholder="$ 0.00"/>
                <span asp-validation-for="VlrUnitario" class="text-danger"> De ver um valor contábil</span>
            </div>
            <div class="form-group mb-5">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-lg-2">
    <a asp-action="Index">Voltar</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
