@model csharp.Models.Cliente

@{
    ViewData["Title"] = "Cadastro";
}

<div class=" bg-black text-white">
<h4>Cliente</h4>

<hr />
<div class="row  bg-black text-white">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCliente" />
            
            <div class="form-group mt-5 mb-2">
                <label asp-for="NnCliente" class="control-label"></label>
            <input asp-for="NnCliente" class="form-control" placeholder="Informe seu nome completo"/>
                <span asp-validation-for="NnCliente" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-5">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Informe sua cidade"/>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-5">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-lg-2">
    <a asp-action="Index">Voltar</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
