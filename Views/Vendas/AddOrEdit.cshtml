@model csharp.Models.Venda

@{
    ViewData["Title"] = "Cadastro";
}

<div class=" bg-black text-white">
<h4>Vendas</h4>

<hr />
<div class="row  bg-black text-white">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduto" />
            <div class="form-group mt-5 mb-2">
                <label asp-for="IdCliente" class="control-label">Cliente</label>
            <input asp-for="IdCliente" class="form-control" placeholder="Descrição do produto"/>
                <span asp-validation-for="IdCliente" class="text-danger"> Campo obrigatório</span>
            </div>
            <div class="form-group mt-5 mb-2">
                <label asp-for="IdProduto" class="control-label">Produto</label>
            <input asp-for="IdProduto" class="form-control" placeholder="Descrição do produto"/>
                <span asp-validation-for="IdProduto" class="text-danger"> Campo obrigatório</span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="VlrUnitarioVenda" class="control-label">Valor unitário</label>
                <input asp-for="VlrUnitarioVenda" class="form-control" placeholder="$ 0.00"/>
                <span asp-validation-for="VlrUnitarioVenda" class="text-danger"> Campo obrigatório</span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="QtdVenda" class="control-label">Quantidade</label>
                <input asp-for="QtdVenda" class="form-control" placeholder="$ 0.00"/>
                <span asp-validation-for="QtdVenda" class="text-danger"> Campo obrigatório </span>
            </div>
            <div class="form-group mb-5">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-lg-2">
    <a asp-action="Index">Voltar</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
